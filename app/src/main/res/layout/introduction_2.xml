<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_2">

    <TextView
        android:id="@+id/txtIntro2Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screenIntroductionTitle2"
        android:textSize="48dp"
        android:textStyle="bold"
        android:textColor="@color/green_slime"
        android:textAlignment="textEnd"
        android:fontFamily="sans-serif"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtIntro2Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screenIntroductionSubtitle1"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textAlignment="textEnd"
        android:maxLines="2"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtIntro2Title"/>
</androidx.constraintlayout.widget.ConstraintLayout>