<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itemEps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/episodeItemPlaceHolder"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/itemEpsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="@string/episodeItemTitlePlaceHolder"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/itemEps"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/itemEpsAired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/episodeItemAiredPlaceHolder"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/itemEpsName"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>